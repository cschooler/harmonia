<% if @event.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@event.errors.count, 'error') %>
			prohibited this user from being saved:</h2>
		<p>There were problems with the following fields:</p>
		<ul>
			<% @event.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>